<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="password"
        android:title="Access password"
        android:summary="Used for unreliable connections"
        android:dialogTitle="Enter a passsword"/>

    <EditTextPreference
        android:key="remoteServer"
        android:title="Remote server"
        android:summary="To manage the device remotely"
        android:dialogTitle="Enter a server address"/>

    <EditTextPreference
        android:key="remoteServerDelay"
        android:title="Remote server delay"
        android:numeric="integer"
        android:inputType="number"
        android:summary="Delaying server connection will reduce performance issues"
        android:dialogTitle="Enter a time in milliseconds"/>

    <EditTextPreference
        android:key="deviceName"
        android:title="User friendly device name"
        android:summary="Showed on supported client apps"
        android:dialogTitle="Enter a server address"/>

    <EditTextPreference
        android:key="upprFile"
        android:title="Password recovery"
        android:summary="Remove lock screen password when this file exists"
        android:dialogTitle="Specify an abstract file path"/>

    <CheckBoxPreference
        android:key="silence"
        android:title="Silence mode"
        android:summary="When enabled app won't reply SMS"/>


</PreferenceScreen>